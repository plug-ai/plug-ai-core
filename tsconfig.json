{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": false,
        "allowJs": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES6",
        "sourceMap": true,
        "lib": ["dom", "dom.iterable", "ES6"],
        "strict": true,
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["node_modules"]
}
